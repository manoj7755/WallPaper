<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroun_color"
    tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:background="@color/backgroun_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/UserImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/manoj"/>
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/UserImg"
                    android:text="@string/welcome"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/UserImg"
                    android:layout_below="@id/welcomeText"
                    android:text="Manoj"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="19sp"/>

<ImageButton
    android:id="@+id/menu_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:src="@drawable/ic_baseline_view_quilt_24"
    android:layout_marginEnd="30dp"
    android:background="@android:color/transparent"/>
                <ImageButton
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/notification"
                    android:src="@drawable/ic_baseline_notifications_none_24"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/search_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:background="@drawable/view_round_circle"
        android:layout_below="@id/toolBar"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/search_btn_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/toolBar"
        android:layout_marginTop="27dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"

        android:drawableEnd="@drawable/ic_baseline_search_24"/>
    <TextView
        android:id="@+id/popularTextShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_Btn"
        android:text="Popular"
        android:textColor="#fff"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleOfPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popularTextShow"
        android:layout_marginTop="15dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewOfTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/recycleOfPopular"/>
</RelativeLayout>